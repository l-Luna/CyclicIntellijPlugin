<idea-plugin>
    <id>org.example.CyclicIntellijPlugin</id>
    <name>Cyclic Support</name>
    <vendor>Cyclic</vendor>

    <description><![CDATA[
    Adds support for the Cyclic programming language to IntelliJ.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <fileType name="Cyclic file"
                  implementationClass="cyclic.intellij.CyclicFileType"
                  fieldName="FILE_TYPE"
                  language="Cyclic"
                  extensions="cyc"
        />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>